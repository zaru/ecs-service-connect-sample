{
  "deploymentConfiguration": {
    "deploymentCircuitBreaker": {
      "enable": false,
      "rollback": false
    },
    "maximumPercent": 200,
    "minimumHealthyPercent": 100
  },
  "desiredCount": 1,
  "enableECSManagedTags": false,
  "healthCheckGracePeriodSeconds": 0,
  "launchType": "FARGATE",
  "loadBalancers": [
    {
      "containerName": "nextjs",
      "containerPort": 3000,
      "targetGroupArn": "{{ ssm `/ecs/next-js-cdk/internal-tg-arn` }}"
    }
  ],
  "networkConfiguration": {
    "awsvpcConfiguration": {
      "securityGroups": ["{{ ssm `/ecs/next-js-cdk/internal-sg-id` }}"],
      "subnets": [
        "{{ ssm `/ecs/next-js-cdk/subnet-id-0` }}",
        "{{ ssm `/ecs/next-js-cdk/subnet-id-1` }}"
      ]
    }
  },
  "serviceConnectConfiguration": {
    "enabled": true,
    "namespace": "NextJsSandbox",
    "services": [
      {
        "clientAliases": [
          {
            "port": 3000
          }
        ],
        "portName": "internal-next-js"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs-service-connect-proxy",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "internal-nextjs"
      }
    }
  },
  "placementConstraints": [],
  "placementStrategy": [],
  "platformVersion": "LATEST",
  "schedulingStrategy": "REPLICA",
  "serviceRegistries": [],
  "enableExecuteCommand": true
}
